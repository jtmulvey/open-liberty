## An extra include is needed to the app-resources.bnd
## so that this bnd file can use the app-resources header
-include= ~../cnf/resources/bnd/bundle.props, \
          ~../cnf/resources/bnd/app-resources.bnd

bVersion=1.0

javac.source: 1.8
javac.target: 1.8

bSymbolicName=com.ibm.ws.acme

Bundle-Name: ACME support
Bundle-SymbolicName: com.ibm.ws.acme
Bundle-Description: ACME; This feature adds support for ACME and LetsEncrypt. 

WS-TraceGroup: ACME

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=1.8))"   

Web-ContextPath: /.well-known/acme-challenge

IBM-Web-Extension-Processing-Disabled: false

Import-Package: org.jose4j.*, \
	org.slf4j.*, \
    org.bouncycastle.*, \
    org.bouncycastle.jce.provider.*, \
    javax.enterprise.context.spi; version="[1.1,3)",\
    javax.enterprise.inject.spi; version="[1.1,3)",\
    javax.enterprise.util; version="[1.1,3)",\
  !*.internal.*, \
    *      

Private-Package: com.ibm.ws.acme.internal.*, \
   com.ibm.ws.acme.config, \
   com.ibm.ws.acme.web, \
   com.ibm.ws.acme.resources

Include-Resource: \
    WEB-INF=resources/WEB-INF, \
    OSGI-INF=resources/OSGI-INF

Export-Package: \
 com.ibm.ws.acme;version="1.0.23"
 
Service-Component: \
  com.ibm.ws.acme.config; \
    implementation:=com.ibm.ws.acme.internal.AcmeProviderServiceImpl; \
    provide:=com.ibm.ws.acme.config.AcmeProviderService; \
    activate:=activate; \
    deactivate:=deactivate; \
    modified:=modify; \
    configuration-policy:=require; \
    immediate:=true; \
    properties:='service.vendor=IBM'
     
-dsannotations-inherit: true
-dsannotations: com.ibm.ws.acme.internal.ApplicationListener, \
    com.ibm.ws.acme.web.AcmeAuthorizationServices, \
	com.ibm.ws.acme.internal.ApplicationProcessor

instrument.disabled: true
    
-buildpath: \
	com.ibm.websphere.appserver.spi.logging,\
	com.ibm.ws.javaee.dd.common;version=latest,\
	com.ibm.websphere.javaee.servlet.3.0;version=latest,\
	com.ibm.websphere.appserver.spi.kernel.service,\
	com.ibm.websphere.org.osgi.core,\
	com.ibm.websphere.org.osgi.service.component,\
	com.ibm.wsspi.org.osgi.service.component.annotations,\
	com.ibm.ws.injection.core;version=latest,\
	com.ibm.ws.container.service;version=latest,\
	com.ibm.wsspi.org.osgi.service.event;version=latest,\
	com.ibm.ws.webcontainer;version=latest,\
	com.ibm.websphere.appserver.spi.httptransport;version=latest,\
	com.ibm.websphere.javaee.servlet.3.1;version=latest,\
	com.ibm.websphere.appserver.spi.ssl;version=latest,\
	com.ibm.wsspi.org.osgi.service.event;version=latest,\
	com.ibm.ws.container.service.compat;version=latest,\
    com.ibm.ws.context;version=latest,\
    com.ibm.ws.javaee.metadata.context;version=latest,\
	com.ibm.ws.adaptable.module;version=latest,\
	com.ibm.ws.anno;version=latest,\
	com.ibm.ws.artifact.overlay;version=latest,\
	com.ibm.websphere.appserver.spi.artifact;version=latest,\
	com.ibm.ws.logging.core,\
	com.ibm.ws.resource;version=latest, \
    com.ibm.ws.org.jose4j.0.5.1;version=latest,\
	com.ibm.ws.org.slf4j.api.1.7.7;version=latest,\
	com.ibm.ws.org.bcprov.jdk15on.1.60;version=latest,\
	com.ibm.ws.org.bcpkix.jdk15on.1.60;version=latest, \
	com.ibm.ws.org.osgi.annotation.versioning;version=latest
